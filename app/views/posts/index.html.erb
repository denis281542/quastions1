<h1>Вопросов пока нет</h1>

<table>
  
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.quations %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <td>
        <h2>Дать ответ:</h2>
          <%= form_with(model: @answer, local: true) do |form| %>
              <%= form.label :body %><br>
              <%= form.text_area :body %>
            </p>
            <p>
              <%= form.submit %>
            </p>
          <% end %>
        </td>
    <% end %>
  </tbody>
</table>

